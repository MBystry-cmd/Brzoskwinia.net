<main class="container">
    <section class="container px-4 px-lg-5 mt-5">
        <div class="category">Elektronika</div>
    </section>

    <section class="py-5">
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                {{# each products }}
                <div class="col mb-5">
    
                    <div class="card h-100">

                        <img class="card-img-top" src="{{this.img}}" alt="...">

                        <div class="card-body p-4">
                            <div class="text-center">

                                <h5 class="fw-bolder">{{this.name}}</h5>

                                ${{this.cost}}
                            </div>
                        </div>

                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center">
                                <a class="btn btn-outline-dark mt-2" href="/id/{{this._id}}" id="{{this._id}}">Opis</a>
                                
                                <form action="/" method="post">
                                    <button class="btn btn-outline-dark mt-2" type="submit" name="product_id" value="{{this._id}}">Dodaj do koszyka</button>
                                </form>
                                <!--- <a class="btn btn-outline-dark mt-2" id="{{this._id}}">Dodaj do koszyka</a> --->
                            </div>
                        </div>
                    </div>
    
                </div>

            {{/each}}
            </div>
        </div>
    </section>

</main>